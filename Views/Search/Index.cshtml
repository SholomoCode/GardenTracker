@{
}
@using Tracker.Controllers;
@using Tracker.Models;
@model List<Seed>
    <body style="background-color: #93C572">
        <h1>Search your seed inventory </h1>

        <form asp-controller="Search" asp-action="Index" method="post">
            <div class="form-group">
                <label>Search Value </label>
                <input name="searchTerm" class="form-control" />

            </div>

            <br />

            <input type="submit" value="Search Inventory" class="btn btn-light" />
        </form>

        @if (Model != null)
        {
            foreach (var seed in Model)
            {
                <table>
                    <p><a asp-controller="Seed" asp-action="Detail" asp-route-id="@seed.Id">@seed.Name</a></p>
                    <p></p>
                </table>

            }
        }


        <p>@ViewBag.MyMessage</p>

        </body>

