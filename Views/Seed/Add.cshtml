@model Tracker.Models.Seed

<h1>Add Seed</h1>

<form asp-controller="Seed" asp-action="AddSeed" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span></span>
    </div>

    <div class="form-group">
        <label asp-for="HardinessZone">Hardiness Zone</label>
        <input asp-for="HardinessZone" class="form-control" />
        <span></span>
    </div>

    <div class="form-group">
        <label asp-for="WaterSchedule">Watering Schedule</label>
        <select asp-for="WaterSchedule">
            <option value="0">Please Select One</option>
            <option value="1">Once a week</option>
            <option value="2">Twice a week</option>
            <option value="3">Every other week</option>
            <option value="4">DEMO</option>
        </select>
        <span></span>
    </div>
    <br />

    <input type="submit" value="Add Seed" class="btn btn-danger" />
</form>