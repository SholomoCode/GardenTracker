@model Tracker.ViewModels.AddSeedViewModel

<h1>Add Seed</h1>

<form asp-controller="Seed" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span></span>
    </div>

    <div class="form-group">
        <label asp-for="BedId">Bed</label>
        <select asp-for="BedId" asp-items="Model.Beds"></select>
        <a href="/Employer/Create">Add Bed</a>
        <span asp-validation-for="BedId" class="text-danger"></span>
        <span></span>
    </div>

    <br />

    <input type="submit" value="Add Job" />
</form>