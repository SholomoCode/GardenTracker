@model Tracker.Models.Bed

<h1>Add GardenBed</h1>

<form asp-controller="Bed" asp-action="AddBed" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span></span>
    </div>

    <div class="form-group">
        <label asp-for="DatePlanted">Date Planted</label>
        <input asp-for="DatePlanted" class="form-control" />
        <span></span>
    </div>

    <div>
        <label asp-for="HardinessZone">Hardiness Zone</label>
        <input asp-for="HardinessZone" class="form-control" />
        
    </div>

    <br />

    <input type="submit" value="Add Garden Bed" class="btn btn-danger" />
</form>