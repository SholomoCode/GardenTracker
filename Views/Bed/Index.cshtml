@using Tracker.Models
@model List<Bed>


<div class="text-center">
<h1>Current Garden Beds </h1>

@if (Model.Count == 0)
{
    <p>No Garden beds have been created yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Id
            <th>Garden Bed</th>
            <th>Date Planted</th>
        </tr>
        @foreach (var bed in Model)
        {
            <tr>
                <td>@bed.Id</td>


                <td><a asp-controller="Bed" asp-action="Detail" asp-route-id="@bed.Id">@bed.Name</a></td>
                <td>@bed.DatePlanted</td>
            </tr>
        }
    </table>
}
</div>
