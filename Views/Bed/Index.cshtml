@model List<Tracker.Models.Bed>

<h1>Current Garden Beds </h1>

@if (Model.Count == 0)
{
    <p>No Garden beds have been created yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Id
            <th>Garden Bed</th>
        </tr>
        @foreach (Bed bed in Model)
        {
            <tr>
                <td>@bed.Id</td>


                <td><a asp-controller="Bed" asp-action="About" asp-route-id="@bed.Id">@bed.Name</a></td>
            </tr>
        }
    </table>
}
